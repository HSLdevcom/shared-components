{
  "name": "sharedcomponents",
  "version": "0.1.0",
  "description": "Shared components to be used in HSL projects. React and styled components.",
  "main": "lib/index.js",
  "scripts": {
    "build:babel": "babel src/ --out-dir lib/",
    "build:babelw": "babel src/ --out-dir lib/ --watch",
    "start": "concurrently --kill-others \"npm run build:babelw\"  \"npm run storybook\" \"npm run lint:watch\"",
    "lint:tight": "esw src/ --color --max-warnings 0",
    "lint:watch": "esw src/ -w --color",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "storyshots",
    "test-update": "./scripts/updateShots.sh",
    "es-lint": "eslint .",
    "test-unit": "mocha --compilers js:babel-core/register --require ./test/test_helper.js 'test/**/*.@(js|jsx)'"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/hsb20/sharedcomponents.git"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/hsb20/sharedcomponents#readme",
  "dependencies": {
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "concurrently": "^3.1.0",
    "prop-types": "^15.5.10",
    "react": "^15.5.0",
    "react-dom": "^15.5.0",
    "react-router": "^3.0.2",
    "react-scripts": "^1.0.6",
    "styled-components": "^2.0.0"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.21.0",
    "@kadira/storybook-addon-actions": "^1.1.3",
    "@kadira/storybook-addon-knobs": "^1.7.1",
    "@kadira/storyshots": "^2.1.0",
    "babel-core": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "chai": "^3.5.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-node": "^0.3.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint-watch": "^2.1.14",
    "jsdom": "^9.9.1",
    "mocha": "^3.4.2",
    "react-addons-test-utils": "^15.5.1",
    "storybook-addon-jsx": "^3.1.0"
  }
}
