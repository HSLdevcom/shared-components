{
  "name": "sharedcomponents",
  "version": "0.4.1",
  "description": "Shared components to be used in HSL projects. React and styled components.",
  "main": "lib/index.js",
  "scripts": {
    "build:babel": "babel src/ --out-dir lib/ --ignore test.js",
    "build:babelw": "babel src/ --out-dir lib/ --watch --ignore test.js",
    "start": "concurrently --kill-others \"npm run build:babelw\"  \"npm run storybook\" \"npm run lint:watch\"",
    "lint:tight": "esw src/ --color --max-warnings 0",
    "lint:watch": "esw src/ -w --color",
    "storybook": "start-storybook -s ./static -p 6006",
    "build-storybook": "build-storybook -s ./static",
    "deploy-storybook": "storybook-to-ghpages",
    "test": "jest",
    "test-update": "./scripts/updateShots.sh",
    "es-lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/hsb20/sharedcomponents.git"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/hsb20/sharedcomponents#readme",
  "dependencies": {
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "classnames": "^2.2.5",
    "concurrently": "^3.1.0",
    "prop-types": "^15.5.10",
    "react": "^15.5.0",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "eventemitter3": "^2.0.3",
    "react-dom": "^15.5.0",
    "react-router": "^3.0.2",
    "react-scripts": "^1.0.6",
    "react-transition-group": "^1.1.3",
    "styled-components": "^2.0.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "3.1.6",
    "@storybook/addon-knobs": "3.1.6",
    "@storybook/addon-storyshots": "^3.1.6",
    "@storybook/react": "3.1.6",
    "@storybook/storybook-deployer": "^2.0.0",
    "babel-core": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-polyfill": "^6.23.0",
    "chai": "^3.5.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-node": "^0.3.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "eslint-watch": "^2.1.14",
    "jest": "^20.0.4",
    "react-test-renderer": "^15.6.1",
    "storybook-addon-jsx": "^4.1.1"
  }
}
